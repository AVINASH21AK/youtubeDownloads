<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!--Full Screen-->
    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/red</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Bottom sheet for month year dialog -->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">400dp</item>
    </style>







    <!--<style name="Theme.App.Base" parent="Theme.AppCompat.NoActionBar">-->
    <style name="Theme.App.Base" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>



    <style name="Theme_App_Blue" parent="Theme.App.Base">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="Theme_App_Orange" parent="Theme.App.Base">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="Theme_App_BlueGray" parent="Theme.App.Base">
        <item name="colorPrimary">@color/bluegray</item>
        <item name="colorPrimaryDark">@color/bluegray_dark</item>
        <item name="colorAccent">@color/bluegray</item>
    </style>

    <style name="Theme_App_Cyan" parent="Theme.App.Base">
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">@color/cyan_dark</item>
        <item name="colorAccent">@color/cyan</item>
    </style>

    <style name="Theme_App_Green" parent="Theme.App.Base">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="Theme_App_Brown" parent="Theme.App.Base">
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryDark">@color/brown_dark</item>
        <item name="colorAccent">@color/brown</item>
    </style>

</resources>
